<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">

  <body>
    <metal:fill fill-slot="content-core">

      <div id="category"
           tal:define="categories1 view/CategoriesServei;
                       categories2 view/CategoriesServeiPPS;
                       categories3 view/ParaulesClau;
                       categories4 view/EtiquetesCSPT;
                       categories5 context/Subject|nothing;
                       url_quote  nocall:modules/Products.PythonScripts.standard/url_quote;"
           tal:condition="python:(categories1 or categories2 or categories3 or categories4 or categories5)">

        <span tal:omit-tag tal:condition="categories3">
          <tal:filedunder>By Category:</tal:filedunder>
          <span tal:repeat="category categories3">
            <a href=""
                class="link-category"
                rel="tag"
                tal:content="category/title"
                tal:define="item_href category/href"
                tal:attributes="href item_href">
                Category
            </a><span class="separator" tal:condition="not: repeat/category/end">,</span>
          </span>
        <br/>
        </span>

        <span tal:omit-tag tal:condition="categories1">
        <tal:filedunder>Categories Servei:</tal:filedunder>
          <span tal:repeat="category categories1">
            <a href=""
               class="link-category"
               rel="tag"
               tal:content="category/title"
               tal:define="item_href category/href"
               tal:attributes="href item_href">
              Category
              </a><span class="separator" tal:condition="not: repeat/category/end">,</span>
          </span>
        <br/>
        </span>

        <span tal:omit-tag tal:condition="categories2">
          <tal:filedunder>Categories Servei PPS:</tal:filedunder>
          <span tal:repeat="category categories2">
            <a href=""
                class="link-category"
                rel="tag"
                tal:content="category/title"
                tal:define="item_href category/href"
                tal:attributes="href item_href">
                Category
            </a><span class="separator" tal:condition="not: repeat/category/end">,</span>
          </span>
        <br/>
        </span>

        <span tal:omit-tag tal:condition="categories4">
          <tal:filedunder>Etiquetes CSPT:</tal:filedunder>
          <span tal:repeat="category categories4">
            <a href=""
                class="link-category"
                rel="tag"
                tal:content="category/title"
                tal:define="item_href category/href"
                tal:attributes="href item_href">
                Category
            </a><span class="separator" tal:condition="not: repeat/category/end">,</span>
          </span>
        <br/>
        </span>

        <span tal:omit-tag tal:condition="categories5">
          <tal:filedunder>Etiquetes:</tal:filedunder>
          <span tal:repeat="category categories5">
            <a href=""
               class="link-category"
               rel="tag"
               tal:content="category"
               tal:define="quotedCat python:url_quote(category)"
               tal:attributes="href string:${context/portal_url}/search?Subject%3Alist=${quotedCat}">
              Category
              </a><span class="separator" tal:condition="not: repeat/category/end">,</span>
          </span>
        </span>
      </div>

      <metal:field use-macro="python:context.widget('body', mode='view')">
          Body text
      </metal:field>

    </metal:fill>

  </body>
</html>
