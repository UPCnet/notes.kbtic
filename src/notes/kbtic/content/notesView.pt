<html xmlns="http://www.w3.org/1999/xhtml"
  xml:lang="en"
  lang="en"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  metal:use-macro="context/main_template/macros/master"
  i18n:domain="plone">

  <body>
    <metal:fill fill-slot="content-core">

      <div id="category" tal:omit-tag tal:condition="context/obsolete|nothing" 
        class="alert alert-danger" role="alert" 
        style="background-color: #f2dede; color: #a94442; text-align: right; font-size: 12px; font-weight: bold; border: 1px solid #ebccd1">
        Atenci√≥: Document marcat com obsolet
      </div>

      <div id="category"
       tal:define="categories1 view/CategoriesServei;
       categories2 view/CategoriesServeiPPS;
       categories3 view/ParaulesClau;
       categories4 view/EtiquetesCSPT;
       categories5 view/EtiquetesADS;
       categories6 context/Subject|nothing;
       url_quote  nocall:modules/Products.PythonScripts.standard/url_quote;"
       tal:condition="python:(categories1 or categories2 or categories3 or categories4 or categories5 or categories6)">

       <span tal:omit-tag tal:condition="categories5">
        <tal:filedunder>By Category (ADS-SPO):</tal:filedunder>
        <span tal:repeat="category categories5">
<!--           <a href=""
            class="link-category"
            rel="tag"
            tal:content="category/title"
            tal:define="item_href category/href"
            tal:attributes="href item_href">
            Category
          </a> -->
          <span tal:content="category/title"> Category </span>
          <span class="separator" tal:condition="not: repeat/category/end">,</span>
        </span>
        <br/>
      </span>
      <span tal:omit-tag tal:condition="categories1">
        <tal:filedunder>[OSOLETE] Categories Servei:</tal:filedunder>
        <span tal:repeat="category categories1">
          <a href=""
            class="link-category"
            rel="tag"
            tal:content="category/title"
            tal:define="item_href category/href"
            tal:attributes="href item_href">
            Category
          </a><span class="separator" tal:condition="not: repeat/category/end">,</span>
        </span>
        <br/>
      </span>
      <span tal:omit-tag tal:condition="categories2">
        <tal:filedunder>[OSOLETE] Categories Servei PPS:</tal:filedunder>
        <span tal:repeat="category categories2">
          <a href=""
            class="link-category"
            rel="tag"
            tal:content="category/title"
            tal:define="item_href category/href"
            tal:attributes="href item_href">
            Category
          </a><span class="separator" tal:condition="not: repeat/category/end">,</span>
        </span>
        <br/>
      </span>
      <span tal:omit-tag tal:condition="categories4">
        <tal:filedunder>[OSOLETE] Etiquetes CSPT:</tal:filedunder>
        <span tal:repeat="category categories4">
          <a href=""
            class="link-category"
            rel="tag"
            tal:content="category/title"
            tal:define="item_href category/href"
            tal:attributes="href item_href">
            Category
          </a><span class="separator" tal:condition="not: repeat/category/end">,</span>
        </span>
        <br/>
      </span>
      <span tal:omit-tag tal:condition="categories6">
        <tal:filedunder>[NEW] Etiquetes:</tal:filedunder>
        <span tal:repeat="category categories6">
          <a href=""
            class="link-category"
            rel="tag"
            tal:content="category"
            tal:define="quotedCat python:url_quote(category)"
            tal:attributes="href string:${context/portal_url}/kbtic-rin/?cat=${category}">
            Category
          </a><span class="separator" tal:condition="not: repeat/category/end">,</span>
        </span>
      </span>
    </div>

    <metal:field use-macro="python:context.widget('body', mode='view')">
      Body text
    </metal:field>

  </metal:fill>

</body>
</html>